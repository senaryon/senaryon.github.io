    <script>
        // ELEMENTLER
        const storyText = document.getElementById('storyText');
        const wordCount = document.getElementById('wordCount');
        const progressBar = document.getElementById('progressBar');
        const agreementCheckbox = document.getElementById('agreementCheckbox');
        const submitButton = document.getElementById('submitButton');
        
        // KELƒ∞ME SAYMA
        storyText.addEventListener('input', function() {
            const text = this.value.trim();
            const words = text === '' ? [] : text.split(/\s+/);
            const count = words.length;
            
            // Sayacƒ± g√ºncelle
            wordCount.textContent = count;
            
            // Progress bar
            const percentage = Math.min((count / 80) * 100, 100);
            progressBar.style.width = percentage + '%';
            
            // Renk deƒüi≈üimi
            if (count >= 80) {
                wordCount.style.color = '#00ff00';
                progressBar.style.background = 'linear-gradient(90deg, #0f0, #0ff)';
            } else if (count >= 40) {
                wordCount.style.color = '#ff9900';
                progressBar.style.background = 'linear-gradient(90deg, #f00, #ff0)';
            } else {
                wordCount.style.color = '#ff0000';
                progressBar.style.background = 'linear-gradient(90deg, #f00, #f90)';
            }
        });
        
        // G√ñNDERME BUTONU
        submitButton.addEventListener('click', function() {
            const text = storyText.value.trim();
            const words = text === '' ? [] : text.split(/\s+/);
            const agreed = agreementCheckbox.checked;
            
            // Kontroller
            if (words.length < 80) {
                alert('‚ùå EN AZ 80 KELƒ∞ME YAZMALISIN! \n\n≈ûu anki kelime sayƒ±n: ' + words.length);
                storyText.focus();
                return;
            }
            
            if (!agreed) {
                alert('‚ùå S√ñZLE≈ûMEYƒ∞ KABUL ETMELƒ∞Sƒ∞N! \n\nL√ºtfen "kabul ediyorum" kutusunu i≈üaretle.');
                agreementCheckbox.focus();
                return;
            }
            
            // G√∂nderim animasyonu
            submitButton.innerHTML = '‚è≥ G√ñNDERƒ∞Lƒ∞YOR...';
            submitButton.disabled = true;
            
            // Sim√ºle edilmi≈ü g√∂nderim (ger√ßekte backend'e gidecek)
            setTimeout(() => {
                // Ba≈üarƒ± mesajƒ±
                alert('‚úÖ Fƒ∞KRƒ∞N G√ñNDERƒ∞LDƒ∞!\n\n‚Ä¢ Sadece admin g√∂rebilir\n‚Ä¢ Admin deƒüerlendirecek\n‚Ä¢ ƒ∞leti≈üime ge√ßilirse 48 saat i√ßinde yanƒ±t ver\n\nTe≈üekk√ºrler! üé¨');
                
                // Formu temizle
                storyText.value = '';
                wordCount.textContent = '0';
                progressBar.style.width = '0%';
                agreementCheckbox.checked = false;
                
                // Butonu eski haline getir
                submitButton.innerHTML = 'üöÄ Fƒ∞KRƒ∞Mƒ∞ G√ñNDER (SADECE ADMƒ∞N G√ñR√úR)';
                submitButton.disabled = false;
                
                // Reklamlarƒ± yenile (sim√ºlasyon)
                document.querySelectorAll('.ad-space').forEach(ad => {
                    ad.style.animation = 'none';
                    setTimeout(() => {
                        ad.style.animation = 'fadeIn 0.8s ease-out';
                    }, 10);
                });
                
            }, 1500);
        });
        
        // ENTER tu≈üu ile g√∂nderimi engelle (Shift+Enter ile yeni satƒ±r)
        storyText.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                submitButton.click();
            }
        });
        
        // Sayfa y√ºklendiƒüinde
        window.addEventListener('load', function() {
            storyText.focus();
        });
    </script>
